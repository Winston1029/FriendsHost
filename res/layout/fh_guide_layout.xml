<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/black_opaque">
  
  <include android:id="@+id/fhTitle" layout="@layout/fh_guide_title_bar"/>
  
  <LinearLayout
  	android:id="@+id/fhGuidLayout"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:layout_alignParentTop="true"
  	>
  	<LinearLayout android:id="@+id/arrowLeft"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
		android:layout_marginTop="15dip"
		android:layout_marginLeft="45dip"
		android:orientation="vertical"
  		>
  	<ImageView android:src="@drawable/fh_arrow_left" 
  				android:layout_height="match_parent" 
  				android:id="@+id/leftArrow" 
  				android:layout_width="match_parent"
  				>
  	</ImageView>
  	<TextView android:id="@+id/txLeft"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:text="Tap to Add/Remove SNS"
  		android:textColor="@color/light_green">
  	</TextView>
  	</LinearLayout>
  	<LinearLayout android:id="@+id/arrowRight"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_weight="0.8"
		android:layout_marginTop="15dip"
  		android:layout_marginRight="90dip"
		android:orientation="vertical"
  		>
  	<ImageView android:src="@drawable/fh_arrow_right" 
  				android:layout_height="match_parent"
  				android:layout_width="match_parent"
  				android:layout_weight="0.8"
  				>
  	</ImageView>
  		<TextView android:id="@+id/txRight"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:text="Tap to post Status"
  		android:textColor="@color/light_green">
  		</TextView>
  	 </LinearLayout>
  </LinearLayout>
  <LinearLayout
  	android:id="@+id/fhGuidLayout"
  	android:layout_width="60dip"
  	android:layout_height="wrap_content"
  	android:orientation="vertical"
  	android:layout_alignParentRight="true"
  	android:layout_marginTop="45dip"
  	>
	  	<ImageView android:src="@drawable/fh_arrow_vertical" 
	  				android:layout_height="match_parent" 
	  				android:id="@+id/leftArrow" 
	  				android:layout_width="match_parent"
	  				>
	  	</ImageView>
	  	<TextView android:id="@+id/txVertical"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:text="Tap to view top feed"
  		android:textColor="@color/light_green">
  		</TextView>
  </LinearLayout>
   <LinearLayout
  	android:id="@+id/fhGuidLayout"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	android:orientation="vertical"
  	android:layout_alignParentBottom="true"
  	>
  	<TextView android:id="@+id/txVertical"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:text="Scroll Horionztally to change SNS"
  		android:textColor="@color/light_green"
  		android:gravity="center_horizontal">
  		</TextView>
  	<ImageView android:src="@drawable/fh_scroll_horizontal" 
	  				android:layout_height="match_parent" 
	  				android:id="@+id/leftArrow"
	  				android:layout_width="match_parent" 
	  				>
	  	</ImageView>
  	</LinearLayout>
  	<Button android:id="@+id/tabStartBtn"
  		android:layout_centerInParent="true"
  		android:text="Tap to Start"
  		android:textColor="@color/light_green"
  		android:textSize="20dip"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:paddingLeft="15dip"
  		android:paddingRight="15dip"
  		android:paddingTop="10dip"
  		android:paddingBottom="10dip"
  		android:background="@drawable/fh_guide_btn_bg">
  	</Button>
</RelativeLayout>
